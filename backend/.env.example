# =============================================================================
# TurtleTrading Platform - Environment Configuration Template
# Copy this file to .env and update the values for your environment
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=TurtleTrading
VERSION=1.0.0
DEBUG=true
TESTING=false

# Environment (development, staging, production)
ENVIRONMENT=development

# =============================================================================
# API CONFIGURATION  
# =============================================================================
API_V1_PREFIX=/api/v1

# SECURITY: Generate a secure random key for production
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production-minimum-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CORS SETTINGS
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://127.0.0.1:3000,http://127.0.0.1:3001,http://127.0.0.1:3002,http://127.0.0.1:3003,http://localhost:8000,http://127.0.0.1:8000
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400
CORS_ALLOW_ALL_ORIGINS=false
CORS_ALLOW_HEADERS=accept,accept-encoding,authorization,content-type,dnt,origin,user-agent,x-csrftoken,x-requested-with,x-request-id,cache-control,pragma
CORS_EXPOSE_HEADERS=x-request-id,x-process-time,x-api-version,content-length,content-type

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Development database
DATABASE_URL=postgresql://turtletrading:turtletrading_pass@localhost:5432/turtletrading
ASYNC_DATABASE_URL=postgresql+asyncpg://turtletrading:turtletrading_pass@localhost:5432/turtletrading

# Database pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_DB=0
CACHE_TTL=300

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
FINNHUB_API_KEY=your_finnhub_api_key_here
YAHOO_FINANCE_TIMEOUT=30

# NewsAPI for sentiment analysis
NEWS_API_KEY=your_news_api_key_here

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your_email@gmail.com
SENDER_PASSWORD=your_app_password_here
EMAIL_ENABLED=false

# =============================================================================
# LSTM MODEL CONFIGURATION
# =============================================================================
LSTM_LOOKBACK_DAYS=90
LSTM_PREDICTION_DAYS=5
LSTM_UNITS=50
LSTM_EPOCHS=75
LSTM_BATCH_SIZE=32
LSTM_VALIDATION_SPLIT=0.2

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
WS_HEARTBEAT_INTERVAL=30
MAX_WS_CONNECTIONS=100

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=turtletrading.log
LOG_ROTATION=10 MB
LOG_RETENTION=7 days

# =============================================================================
# FILE STORAGE
# =============================================================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
BCRYPT_ROUNDS=12
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
GZIP_MINIMUM_SIZE=1000
REQUEST_TIMEOUT=30

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Enable metrics collection
METRICS_ENABLED=false
# Sentry DSN for error tracking
SENTRY_DSN=
# Application monitoring
APM_ENABLED=false